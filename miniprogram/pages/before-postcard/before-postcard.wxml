<!-- index.wxml -->
<view class="container">
  <view class="img-wrapper">
    <image wx:if="{{resImage!==''}}" src="{{resImage}}" style="width: 100%;height: 100%;object-fit: cover;" />
    <image wx:else="" src="../../images/xiaozhaoAvatar.png" style="width: 100%;height: 100%;object-fit: cover;" />
  </view>

  <view class="result">
    <text class="tip">属于你的专属HUST头像已就位！</text>
    <text class="tip">接下来，你还可以获得一张</text>
    <text class="tip">由小招寄给你的明信片哦！</text>
  </view>

  <view class="btn" bindtap="navigate">
    制作明信片</view>

  <view class="logo">
    <image src="../../images/xiaozhaoLogo.png" mode="widthFix" style="width: 200rpx;" />
  </view>
</view>