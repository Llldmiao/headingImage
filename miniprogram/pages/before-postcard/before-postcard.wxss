/* pages/before-postcard/before-postcard.wxss */
page {
  height: 100%;
  width: 100%;
  padding: 28rpx 19rpx 24rpx;
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #d8e3bb;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.img-wrapper {
  margin-top: 20%;
  width: 250rpx;
  height: 250rpx;
}

.result {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip {
  font-size: 35rpx;
  color: #5e9e6f;
  font-weight: 600;
  margin: 20rpx 0;
}

.btn{
  margin: 0;

  height: 60rpx;
  background-color: #8FC19C;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 50rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #ffffff;
}
